{
	"name": "Audius",
	"description": "Audius - the ultimate streaming audio player",
	"version": "0.0.1",
	"permissions": [
		"tabs",
		"activeTab",
		"webRequest",
		"webRequestBlocking",
		"*://*/*"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"externally_connectable": {
		"matches": [
			"*://audius.rockdapus.org/*",
			"*://localhost/*"
		]
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*", "file://*/*", "*://*/*"],
			"js": ["content-script.js"],
			"run_at": "document_end"
		}
	],
	"browser_action": {
		"default_title": "Audius"
	},
	"web_accessible_resources": [
		"img/*.png"
	],
	"icons": {
		"16": "img/audius.logo16.png",
		"48": "img/audius.logo48.png",
		"128": "img/audius.logo128.png"
	},
	"manifest_version": 2
}
